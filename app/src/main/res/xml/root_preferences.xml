<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Geral">
        <com.jaredrummler.android.colorpicker.ColorPreferenceCompat
            android:defaultValue="@color/noteDefaultColor"
            android:key="@string/shared_color"
            android:summary="Selecione uma cor"
            android:title="Cor padrão das notas">

        </com.jaredrummler.android.colorpicker.ColorPreferenceCompat>

        <com.jaredrummler.android.colorpicker.ColorPreferenceCompat
            android:defaultValue="@color/noteTextDefaultColor"
            android:key="@string/font_color"
            android:summary="Selecione uma cor"
            android:title="Cor do texto nas notas">
        </com.jaredrummler.android.colorpicker.ColorPreferenceCompat>

        <EditTextPreference
            app:key="@string/title_size"
            app:title="Tamanho do título"
            android:defaultValue="24"
             />

        <EditTextPreference
            app:key="@string/desc_size"
            app:title="Tamanho da descrição"
            android:defaultValue="14"
            />

    </PreferenceCategory>
</PreferenceScreen>